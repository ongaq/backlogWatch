{
  "manifest_version": 3,
  "minimum_chrome_version": "90.0",
  "name": "Backlog watch",
  "description": "Backlog上でチェックした課題に更新があった際に通知ウィンドウを表示します",
  "version": "2.0.0",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.backlog.jp/*",
        "*://*.backlog.com/*"
      ],
      "css": [
        "css/font-awesome.min.css",
        "css/contents_style.css"
      ],
      "js": [
        "storage.ts",
        "common.ts",
        "issues.ts",
        "projects.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "matches": [
      "*://*.backlog.jp/*",
      "*://*.backlog.com/*"
    ],
    "resources": [
      "storage.ts",
      "common.ts",
      "issues.ts",
      "projects.ts"
    ]
  }],
  "background": {
    "service_worker": "service_worker.ts"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*.backlog.jp/*",
    "*://*.backlog.com/*"
  ]
}
